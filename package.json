{
  "name": "react-measure",
  "version": "3.0.0-rc.3",
  "description": "Compute measurements of React components.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build:code": "del dist && cross-env NODE_ENV=code rollup -c",
    "build:flow": "echo \"// @flow\\n\\nexport * from '../src';\" > dist/index.cjs.js.flow",
    "build": "npm run build:code && npm run build:flow",
    "typecheck": "flow check --max-warnings=0",
    "lint": "prettier --list-different \"**/*.js\"",
    "deploy": "NODE_ENV=production TARGET=minify BABEL_ENV=code webpack && git-directory-deploy --directory example --branch gh-pages",
    "dev": "cross-env NODE_ENV=code webpack-dev-server",
    "test": "jest && npm run typecheck && npm run lint",
    "prepublish": "npm run build && npm run lint",
    "start": "npm run dev",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "globalSetup": "jest-environment-puppeteer/setup",
    "globalTeardown": "jest-environment-puppeteer/teardown"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/souporserious/react-measure"
  },
  "keywords": [
    "react",
    "component",
    "measure",
    "measurements",
    "dimensions",
    "element-queries",
    "container-queries",
    "size",
    "scroll",
    "position"
  ],
  "author": "Travis Arnold <travis@souporserious.com> (http://souporserious.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/souporserious/react-measure/issues"
  },
  "homepage": "https://github.com/souporserious/react-measure",
  "peerDependencies": {
    "react": ">0.13.0",
    "react-dom": ">0.13.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0-beta.42",
    "resize-observer-polyfill": "^1.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.42",
    "@babel/plugin-transform-modules-commonjs": "^7.0.0-beta.42",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.42",
    "@babel/preset-env": "^7.0.0-beta.42",
    "@babel/preset-flow": "^7.0.0-beta.42",
    "@babel/preset-react": "^7.0.0-beta.42",
    "@babel/preset-stage-3": "^7.0.0-beta.42",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.4.3",
    "babel-loader": "^8.0.0-beta.2",
    "create-react-context": "^0.1.6",
    "cross-env": "^5.1.3",
    "del-cli": "^1.1.0",
    "faker": "^4.1.0",
    "flow-bin": "^0.66.0",
    "git-directory-deploy": "^1.5.1",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "jest-environment-node": "^22.4.3",
    "jest-environment-puppeteer": "^2.2.2",
    "lint-staged": "^7.0.0",
    "popmotion": "^8.1.10",
    "prettier": "^1.10.2",
    "puppeteer": "^1.2.0",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-motion": "^0.5.2",
    "react-powerplug": "^1.0.0-alpha.3",
    "react-test-renderer": "^16.4.1",
    "rollup": "^0.57.1",
    "rollup-plugin-babel": "^4.0.0-beta.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-size-snapshot": "^0.2.1",
    "stylefire": "^1.1.9",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-dev-server": "^2.11.1",
    "webpack-hot-middleware": "^2.21.0"
  }
}
